<div class="container">
 <h2 class="text-info mt-3">＜DM＞</h2>
  <div class="row">
    <% @entries.each do |entry| %>
     <a href="/users/<%= entry.user.id %>">
     （<%= entry.user.nickname %>さん）
     </a>
    <% end %>
    <p>のDM部屋</p>
  </div>
  <%= form_with model: @message, local: true do |f| %>
   <div class="row ml-3">
    <div class="col-8">
     <%= f.text_area :content, placeholder: "メッセージを入力して下さい" , size: "60x5"  %>
     <%= f.hidden_field :room_id, :value => @room.id %>
     <%= f.submit "送信する" %>
    </div>
    <div class="col-2">
     <%= link_to "会員一覧に戻る", users_path, class:"btn btn-success" %>
    </div>
  </div>
  <% end %>

    <hr>
     <% if @messages.present? %>
      <% @messages.each do |message| %>
      <div class="media my-5">
       <div class="mr-3"><%= image_tag message.user.get_image, size:'50x50' %></div>
        <div class="media-body">
         <h5 class="mt-0"><%= message.content %></h5>
         <div><%= message.created_at.strftime('%Y-%m-%d %H:%M') %>　by,<%= message.user.nickname %>さん</div>
        </div>
      </div>
    <hr>
      <% end %>
     <% else %>
      <h3 class="text-center">メッセージはまだありません</h3>
     <% end %>
</div>