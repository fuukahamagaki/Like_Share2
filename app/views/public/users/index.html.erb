<div class="container">
  <div class="row text-right my-4">
   <div class="col-sm-3">
    <h1 class="text-info">＜会員一覧＞</h1>
   </div>
   <table class="table table-hover table-inverse text-center" style="margin-top: 20px;">
      <thead>
       <tr>
        <th class="cell1"></th>
        <th class="cell2">ニックネーム</th>
        <th class="cell3">自己紹介分</th>
        <th class="cell4"></th>
       </tr>
      </thead>
      <tbody>
       <% if user_signed_in? %>
        <% @users.each do |user| %>
         <% if user.nickname != "guestuser" %>
           <tr>
            <td class="cell1"><%= image_tag user.get_image, size:'50x50' %></td>
            <td class="cell2"><%= user.nickname %></td>
            <td class="cell3"><%= user.introduction %></td>
            <td class="cell4">
             <%= link_to '詳細', user_path(user.id), class:"btn btn-success" %>
            </td>
           </tr>
          <hr>
         <% end %>
        <% end %>
       <% else %>
        <%= link_to "ユーザーを登録する", new_user_registration_path %>
        <br>
        <%= link_to "ログインする", new_user_session_path %>
       <% end %>
      </tbody>
     </table>
  </div>
</div>