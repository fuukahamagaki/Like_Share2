<div class="container">
  <div class="row  mt-4">
    <h2>会員情報編集</h2>
  </div>

  <%= form_with model: @user, url: user_path, method: :patch,  local: true do |f| %>
    <div class="row mt-3 ml-3">
      <div class="col-2"><%= f.label "氏名" %></div>
      <div class="ml-3"><%= f.text_field :last_name %></div>
      <div class="col-3"><%= f.text_field :first_name %></div>
    </div>
    <div class="row mt-2 ml-3">
      <div class="col-2"><%= f.label "ニックネーム" %></div>
      <div class="col-3"><%= f.text_field :nickname %></div>
    </div>
    <div class="row mt-2 ml-3">
      <div class="col-2"><%= f.label "メールアドレス" %></div>
      <div class="col-3"><%= f.text_field :email %></div>
    </div>
    <div class="row mt-2 ml-3">
      <div class="col-2"><%= f.label "自己紹介文" %></div>
      <div class="col-3"><%= f.text_area :introduction %></div>
    </div>

    <div class="row d-flex justify-content-center mt-3">
      <div class="col-3"><%= f.submit "保存", class: "btn btn-success" %></div>
      <div class="col-3"><%= link_to "退会する", unsubscribe_path, class: "btn btn-danger" %></div>
    </div>
  <% end %>

</div>