<div class='container'>
  <div class='row'>
    <div class="col-8 mx-auto">
  		<h2 class="text-info mt-3">＜投稿編集＞</h2>
  		<%= form_with model:@post,local:true do |f| %>
          <div class="form-group mt-4">
            <%= f.label :"タイトル" %>
            <%= f.text_field :title, class: 'form-control post_title' %>
          </div>
          <div class="form-group mt-3">
            <%= f.label :"内容" %>
            <%= f.text_area :body, size: "40x10", class: 'form-control post_body' %>
          </div>
          <div class="form-group mt-3">
            <%= f.label"タグ (,で区切ると複数タグ登録できます)" %>
            <%= f.text_field :name,value: @tag_list,class:"form-control"%>
          </div>
          <div class="form-group mt-3">
            <%= f.label :"画像" %>
            <%= f.file_field :images, multiple: true %>
          </div>
          <div class="text-center mt-3">
            <%= f.submit "編集する", class: 'btn btn-success ' %>
          </div>
        <% end %>
  </div>
</div>