<div class="container">
  <div class="row text-right my-4">
   <div class="col-sm-3">
    <h2>投稿一覧</h2>
   </div>
    <table class="table table-bordered text-center" style="margin-top: 20px;">
      <thead>
       <tr>
      　<th class="cell1">タイトル</th>
        <th class="cell2">本文</th>
        <th class="cell3">コメント数</th>
        <th class="cell4">いいね数</th>
        <th class="cell5"></th>
       </tr>
      </thead>
      <tbody>
       <% @posts.each do |post| %>
        <tr>
         <td class="cell1"><%= post.title %></td>
         <td class="cell2"><%= post.body %></td>
         <td class="cell3"><%= post.post_comments.count %></td>
         <td class="cell4"><%= post.favorites.count %></td>
         <td class="cell5">
          <div class="button_cart_item text-center">
          <%= link_to '詳細', post_path(post.id), class:"btn btn-success" %>
          </div>
         </td>
        </tr>
       <% end %>
      </tbody>
     </table>
  </div>

