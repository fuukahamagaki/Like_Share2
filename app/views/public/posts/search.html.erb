<div class="container">
  <h2 class="mt-4 text-info">＜検索結果＞</h2>
  <table class="table table-hover table-inverse text-center mt-2">
    <thead>
     <tr>
      <th class="cell1"></th>
      <th class="cell2">投稿日</th>
      <th class="cell3">タイトル</th>
      <th class="cell4">本文</th>
      <th class="cell5">コメント</th>
      <th class="cell6">いいね</th>
     </tr>
    </thead>
    <tbody>
     <% @posts.each do |post| %>
      <tr>
       <td class="cell1"><%= image_tag post.user.get_image, size:'50x50' %><%= post.user.nickname %></td>
       <td class="cell2"><%= post.created_at.strftime('%Y-%m-%d %H:%M') %></td>
       <td class="cell3">
        <%=link_to post_path(post.id) do %>
         <%#= tag.name %>
         <%= post.title.truncate(10) %> <!--タイトル表示される文字数は10文字まで-->
        <% end %>
       </td>
       <td class="cell4"><%= post.body.truncate(20) %></td>
       <td class="cell5"><%= post.post_comments.count %>件</td>
       <td class="cell6"><%= post.favorites.count %>件</td>
      </tr>
     <% end %>
    </tbody>
  </table>
</div>