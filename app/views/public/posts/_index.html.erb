<table class="table table-hover table-inverse text-center" style="margin-top: 20px;">
      <thead>
       <tr>
        <th class="cell1"></th>
        <th class="cell2">日付</th>
        <th class="cell3">タイトル</th>
        <th class="cell4">本文</th>
        <th class="cell5">コメント数</th>
        <th class="cell6">いいね数</th>
        <th class="cell7"></th>
       </tr>
      </thead>
      <tbody>
       <% posts.each do |post| %>
        <tr>
         <td class="cell1"></td>
         <td class="cell2"><%= post.created_at.strftime('%Y-%m-%d %H:%M') %></td>
         <td class="cell3"><%= post.title %></td>
         <td class="cell4"><%= post.body.truncate(20) %></td>
         <td class="cell5"><%= post.post_comments.count %></td>
         <td class="cell6"><%= post.favorites.count %></td>
         <td class="cell7">
          <div class="button_cart_item text-center">
          <%= link_to '詳細', post_path(post.id), class:"btn btn-success" %>
          </div>
         </td>
        </tr>
       <% end %>
      </tbody>
     </table>