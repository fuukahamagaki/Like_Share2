 <div class="container">
   <div class="row mt-4">
     <h2>新規投稿</h2>
   </div>
      <%= form_with model:@post,local:true do |f| %>
        <div class="row mt-5">
          <div class="col-2">
           <%= f.label :"タイトル" %>
          </div>
          <div class="col-8">
           <%= f.text_field :title, placeholder: "タイトルを入力", class: 'form-control post_title' %>
          </div>
        </div>
        <div class="row mt-3">
          <div class="col-2">
           <%= f.label :"内容" %>
          </div>
          <div class="col-8">
           <%= f.text_area :body, placeholder: "内容を入力", class: 'form-control post_body' %>
          </div>
        </div>
        <div class="row mt-3">
          <div class="col-2">
           <%= f.label :"タグ(,で区切ると複数タグ登録できます)" %>
          </div>
          <div class="col-8">
           <%= f.text_field :name, placeholder: "空,海,山", class: 'form-control post_body' %>
          </div>
        </div>
        <div class="text-center">
          <%= f.submit "投稿", class: 'btn btn-success' %>
        </div>
      <% end %>
</div>