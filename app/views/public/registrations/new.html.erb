<div class="container">
  <div class="row mt-4">
    <h2 class="text-info">＜新規会員登録＞</h2>
  </div>

  <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <%= render "public/shared/error_messages", resource: resource %>
    <div class="row mt-3 ml-3">
      <div class="col-3 ml-3"><%= f.label "名前" %></div>
      <div class="ml-4"><%= f.text_field :last_name, placeholder:"令和" %></div>
      <div class="col-3"><%= f.text_field :first_name, placeholder:"道子" %></div>
    </div>
    <div class="row mt-2">
      <div class="col-3 ml-5"><%= f.label "ニックネーム(表示名)" %></div>
      <div class="col-3"><%= f.text_field :nickname %></div>
    </div>
    <div class="row mt-2">
      <div class="col-3 ml-5"><%= f.label "メールアドレス" %></div>
      <div class="col-3"><%= f.email_field :email, autofocus: true, autocomplete: "email", placeholder:"sample@example.com" %></div>
    </div>
    <div class="row mt-2">
      <div class="col-3 ml-5"><%= f.label "パスワード（６文字以上）" %></div>
      <div class="col-3"><%= f.password_field :password, autocomplete: "new-password" %></div>
    </div>
    <div class="row mt-2">
      <div class="col-3 ml-5"><%= f.label "パスワード（確認用）" %></div>
      <div class="col-3"><%= f.password_field :password_confirmation, autocomplete: "new-password" %></div>
    </div>
    <div class="row mt-2">
      <div class="col-3 ml-5"></div>
      <div class="col-2 mt-2"><%= f.submit "新規登録", class: "btn btn-success btn-block" %></div>
    </div>
  <% end %>

  <div class="row mt-5 ml-3">
    <h4>既に登録済みの方</h4>
  </div>
  <div class="row mt-2 ml-5"><u><%= link_to "こちら", new_user_session_path %></u>　からログインしてください。</div>

</div>