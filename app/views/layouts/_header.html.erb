 <header>
  <nav class="navbar navbar-expand-lg navbar-light" style="background-color:#00CCFF;">
   <div class="container">
    <nav class="navbar-brand navbar-left header-logo">
     <%= link_to image_tag("logo1.png", size: "50x50"), root_path, class: "header-button btn text-light" %>
    </nav>
    <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNavDropdown" aria-controls="navbarNavDropdown" aria-expanded="false" aria-label="Toggle navigation">
     <span class="navbar-toggler-icon"></span>
    </button>
    <div class="collapse navbar-collapse" id="navbarNavDropdown">
     <ul class="nav navbar-nav ml-auto">
      <!-- 会員がログインしている時 -->
      <% if user_signed_in? %>
        <li>
         <%= link_to user_path(current_user),class: 'nav-link text-light' do %>
          <i class="far fa-user"></i> マイページ
         <% end %>
        </li>
        <li>
         <%= link_to users_path,class: 'nav-link text-light' do %>
          <i class="fas fa-users"></i>会員一覧
         <% end %>
        </li>
        <li>
         <%= link_to posts_path,class: 'nav-link text-light' do %>
          <i class="fas fa-list"></i> 投稿一覧
         <% end %>
        </li>
        <li>
         <%= link_to destroy_user_session_path, method: :delete,class: 'nav-link text-light' do %>
          <i class="fas fa-sign-out-alt"></i> ログアウト
         <% end %>
        </li>

      <!-- 管理者がログインしている時 -->
      <% elsif admin_signed_in? %>
        <li>
         <%= link_to admin_users_path,class: 'nav-link text-light' do %>
          <i class="fas fa-users"></i>会員一覧
         <% end %>
        </li>
        <li>
         <%= link_to admin_posts_path,class: 'nav-link text-light' do %>
          <i class="fas fa-list"></i> 投稿一覧
         <% end %>
        </li>
        <li>
         <%= link_to destroy_admin_session_path, method: :delete,class: 'nav-link text-light' do %>
          <i class="fas fa-sign-out-alt"></i> ログアウト
         <% end %>
        </li>
      <!-- ログインしていない時 -->
      <% else %>
        <li>
         <%= link_to about_path,class: 'nav-link text-light' do %>
          <i class="fas fa-heart"></i> サイトについて
         <% end %>
        </li>
        <li>
         <%= link_to posts_path,class: 'nav-link text-light' do %>
          <i class="fas fa-list"></i> 投稿一覧
         <% end %>
        </li>
        <li>
         <%= link_to new_user_registration_path,class: 'nav-link text-light' do %>
          <i class="fas fa-user-plus"></i> 新規登録
         <% end %>
        </li>
        <li>
         <%= link_to new_user_session_path,class: 'nav-link text-light' do %>
          <i class="fas fa-sign-in-alt"></i> ログイン
         <% end %>
        </li>
        <li>
         <%= link_to new_admin_session_path,class: 'nav-link text-light' do %>
          <i class="fas fa-user-cog"></i> 管理者
         <% end %>
        </li>
      <% end %>
     </ul>

     <!-- 検索機能 -->
     <%= form_with(url: search_posts_path, local: true, method: :get ) do |form| %>
     <form class="d-flex">
      <%= form.text_field :keyword, placeholder: "検索" %>
      <button class="btn btn-outline-light ml-2" type="submit">
        <i class="fas fa-search"></i>
      </button>
     </form>
     <% end %>
    </div>
   </div>
  </nav>
</header>