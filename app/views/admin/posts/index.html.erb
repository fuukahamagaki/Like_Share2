<div class="container">
  <div class="row text-right my-4">
   <div class="col-3">
    <h2 class="text-info">＜投稿一覧＞</h2>
   </div>
    <table class="table table-hover table-inverse text-center" style="margin-top: 20px;">
      <thead>
       <tr>
        <th class="cell1">投稿日</th>
        <th class="cell2">タイトル</th>
        <th class="cell3">本文</th>
        <th class="cell4">コメント数</th>
        <th class="cell5">いいね数</th>
        <th class="cell6"></th>
       </tr>
      </thead>
      <tbody>
       <% @posts.each do |post| %>
        <tr>
         <td class="cell1"><%= post.created_at.strftime('%Y-%m-%d %H:%M') %></td>
         <td class="cell2"><%= post.title %></td>
         <td class="cell3"><%= post.body.truncate(20) %></td>
         <td class="cell4"><%= post.post_comments.count %></td>
         <td class="cell5"><%= post.favorites.count %></td>
         <td class="cell7">
          <div class="button_cart_item text-center">
          <%= link_to '詳細', admin_post_path(post.id), class:"btn btn-success" %>
          </div>
         </td>
        </tr>
       <% end %>
      </tbody>
     </table>
  </div>