<div class="container">
  <div class="row text-right my-4">
   <div class="col-sm-3">
    <h2 class="text-info">＜会員一覧＞</h2>
   </div>
    <table class="table table-hover table-inverse text-center" style="margin-top: 20px;">
      <thead>
       <tr>
        <th class="cell1">ID</th>
        <th class="cell2">ニックネーム</th>
        <th class="cell3">ステータス</th>
        <th class="cell4"></th>
       </tr>
      </thead>
      <tbody>
       <% @users.each do |user| %>
        <tr>
         <td class="cell1"><%= user.id %></td>
         <td class="cell2"><%= user.nickname %></td>
         <td class="cell3">
           <% if user.is_deleted == false %>
            <p class="text-success">有効</p>
           <% else %>
            <p class="text-secondary">退会</p>
           <% end %>
         </td>
         <td class="cell4">
          <div class="button_cart_item text-center">
          <%= link_to '詳細',admin_user_path(user.id), class:"btn btn-success" %>
          </div>
         </td>
        </tr>
       <% end %>
      </tbody>
     </table>
  </div>